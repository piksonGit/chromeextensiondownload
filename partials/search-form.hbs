<div class='c-search js-search'>
  <div class='o-grid'>
    <div class='o-grid__col o-grid__col--4-4-s o-grid__col--3-4-m o-grid__col--center'>
      <form class='c-search__form' role='search'>
        <div class='c-search__icon'>
          {{> search-icon }}
        </div>
        <label for='search-form-input' class='u-screenreader-only'>{{t 'Search {siteTitle}' siteTitle=@site.title }}</label>
        <input type='search' id='search-form-input' aria-label='{{t 'Search {siteTitle}' siteTitle=@site.title }}' class='c-search__input js-search-input' placeholder='{{t 'Type to Search' }}'>
        <script>
          var searchInput=document.getElementById('search-form-input');
          searchInput.setAttribute('autocomplete','off');
          searchInput.addEventListener('keydown',function(e){
            if(e.which===13){
              var keyword=encodeURIComponent('site:crx5.com '+e.target.value);
              window.location.href='https://www.google.com/search?q='+keyword;
              document.querySelector('.c-site-container .c-search.js-search').classList.remove('is-active');
              searchInput.value='';
            }
          })
        </script>
      </form>
    </div>
  </div>

  <div class='o-grid'>
    <div class='o-grid__col o-grid__col--4-4-s o-grid__col--3-4-m o-grid__col--center'>
      <div class='c-search-results js-search-results'></div>
    </div>
  </div>

  <div class='c-search__close js-search-close'>
    <div data-icon='ei-close' data-size='s'></div>
  </div>
</div>