<footer class='c-footer'>
  <div class='o-grid'>

    <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-3-l c-footer__section'>
      <p class='c-footer__headline'>{{ @site.title }}</p>
      <p class='u-type-md u-color-gray'>{{ @site.description }}</p>
    </div>

    {{#if @site.secondary_navigation}}
      <div class='o-grid__col o-grid__col--initial-grow o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-3-l c-footer__section'>
        <p class='c-footer__headline'>{{t 'Navigation' }}</p>
        <ul class='c-footer-list o-plain-list'>
          {{ navigation type='secondary' }}
        </ul>
      </div>
    {{/if}}

    {{!-- {{#unless @member}}
      <div class='o-grid__col o-grid__col--initial-grow o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-3-l c-footer__section'>
        <p class='c-footer__headline'>{{t 'Newsletter' }}</p>
        {{> subscribe-form inputLabel='subscribe-email-footer'}}
      </div>
    {{/unless}} --}}

    <div class='o-grid__col o-grid__col--4-4-s c-footer__section'>
      <div class='u-type-xs c-footer__copyright'>
        &copy; {{ date format='YYYY' }} {{ @site.title }} - {{ @site.url }}
        {{!-- {{{t 'Published with {ghostLink} & {themeLink}' ghostLink='<a href=\'https://ghost.org\'>Ghost</a>' themeLink='<a href=\'https://aspirethemes.com/themes/krabi\'>Krabi</a>' }}} --}}
      </div>
    </div>
    <script>
      var _oldText_=document.querySelector('.u-type-xs.c-footer__copyright').innerText;
      var _newText_=_oldText_.replace('http://','').replace('https://','');
      document.querySelector('.u-type-xs.c-footer__copyright').innerText=_newText_;
    </script>

  </div>

  {{#if @custom.show_scroll_to_top_button}}
    {{> scroll-to-top }}
  {{/if}}
</footer>