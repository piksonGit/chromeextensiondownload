<a href='{{ url }}' class='c-teaser'>
  <div class='c-teaser__content'>
    <h3 class='c-teaser__title'>{{ title }}</h3>
    <time class='c-teaser__date' datetime='{{ date format='YYYY-MM-DD' }}'>{{ date format='D MMM YYYY' }}</time>
  </div>
  {{#if feature_image}}
    <div class='c-teaser__media'>
      <img class='c-teaser__image lazyload' alt="{{#if feature_image_alt}}{{ feature_image_alt }}{{/if}}" data-src='{{ img_url feature_image size='feature-image-small' }}' width='88' height='72'>
    </div>
  {{/if}}
</a>